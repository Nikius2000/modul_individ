<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    NavigationPage.HasNavigationBar="false"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Mobile.MainPage">

    <StackLayout Background="#2B2E4A">
        <Frame Background="#5C5F99" Padding="24" CornerRadius="0">
            <Label Text="ТЕРМИНАЛ СОТРУДНИКА ОХРАНЫ" HorizontalTextAlignment="Center" TextColor="White" FontSize="16"/>
        </Frame>
        <Frame Background="#5C5F99">
            <StackLayout>
                <Entry x:Name="_login" Placeholder="Логин" TextColor="White" Text="9367788"/>
                <Entry x:Name="_password" Placeholder="Пароль" TextColor="White" Text="Password"/>
                <Button x:Name="btn_login" Background="#E84545" CornerRadius="10" Text="Войти" TextColor="white" Clicked="btn_login_Click"/>
                <Label x:Name="err_result" Text="" TextColor="White"/>

            </StackLayout>
        </Frame>
    </StackLayout>

</ContentPage>
